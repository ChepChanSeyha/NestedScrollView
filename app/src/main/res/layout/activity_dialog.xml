<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dialog" android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="10dp">

        <TextView
                android:id="@+id/title_profile"
                android:text="Information"
                android:textColor="@color/myColor"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="30dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Name "
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/var_name"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Address"
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_address"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Phone "
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_phone"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Location"
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_location"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Vehicle"
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_vehicle"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Gender"
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_gender"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Favorite"
                    android:layout_width="80dp"
                    android:layout_height="50dp" android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/var_favorite"
                    android:gravity="center_vertical" android:textColor="@android:color/black"
                    android:layout_weight="1" android:layout_marginLeft="50dp" android:text="null"/>
        </LinearLayout>
        <Button
                android:text="Save"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/btn_save"
                android:layout_gravity="center" android:background="@drawable/border" android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>